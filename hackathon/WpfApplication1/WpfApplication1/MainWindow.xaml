<Window x:Class="WpfApplication1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    <StackPanel Orientation="Vertical" x:Name="ImageViewerPanel">
        <TextBlock Text="{Binding Title}"/>

        <Slider x:Name="Slider" Value="{Binding Progress}"/>
        <StackPanel Orientation="Horizontal" x:Name="ButtonsPanel" HorizontalAlignment="Center">
            <Button x:Name="Play"  Content="Play" Width="200"/>
            <Button x:Name="Stop"  Content="Stop" Width="200"/>
        </StackPanel>    
    </StackPanel>
</Window>
